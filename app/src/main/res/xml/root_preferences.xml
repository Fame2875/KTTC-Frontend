<PreferenceScreen

    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <PreferenceCategory
        app:title=" ">

    </PreferenceCategory>
    <PreferenceCategory
        app:title="General"
        >
        <SwitchPreference
            app:key="theme_preference"
            app:defaultValue="true"
            app:title="Dark Theme"

            />


        <SwitchPreference
            app:key="notification_preference"
            app:defaultValue="true"
            app:title="Notification"

            />

    </PreferenceCategory>

    <PreferenceCategory app:title="About">

        <Preference
            app:title="Version"
            app:summary="0.0.0"

            />

        <Preference
            app:title="About Us"

            />



    </PreferenceCategory>

</PreferenceScreen>